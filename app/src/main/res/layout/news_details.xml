<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/newsHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/news_pri_text"
        android:textSize="25sp"
        tools:text="7 reasons to have coffee" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/newsHead"
        android:background="@color/news_sec_text"
        android:id="@+id/borderNews"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/news_sec_text"
        android:layout_below="@id/borderNews"
        android:textSize="10sp"
        tools:text="7 reasons to have coffee" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/author"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/ImageNews"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ImageNews">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/news_pri_text"/>
    </ScrollView>

</RelativeLayout>