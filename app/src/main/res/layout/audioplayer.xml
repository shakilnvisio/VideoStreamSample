<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"

    >

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/playerView"
        android:focusable="true"
        android:layout_marginBottom="35dp"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/playerView">
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="GetTag"
            android:onClick="GetTag"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="DeleteTag"
            android:onClick="DeleteTag"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="GetAllSongs"
            android:onClick="GetAllSongs"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="GetSongsBasedOnTag"
            android:onClick="GetSongsBasedOnTag"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="DeleteSongs"
            android:onClick="DeleteSongs"/>
    </LinearLayout>

</RelativeLayout>